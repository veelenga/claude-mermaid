{
  "name": "claude-mermaid",
  "version": "1.1.0",
  "description": "MCP server for previewing Mermaid diagrams in Claude Code",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "claude-mermaid": "./build/index.js"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.html",
    "build/**/*.css",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && cp -r src/preview build/ && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "claude",
    "diagram"
  ],
  "author": "Vitalii Elenhaupt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veelenga/claude-mermaid.git"
  },
  "homepage": "https://github.com/veelenga/claude-mermaid#readme",
  "bugs": {
    "url": "https://github.com/veelenga/claude-mermaid/issues"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/ws": "^8.18.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
